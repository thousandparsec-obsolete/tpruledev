<!--
Note on interpretation:
	We insert spaces between the elements inside of a code block.
	So,
		<code>
			<text val="(+" />
			<block type="VAL" />
			<block type="VAL" />
			<text val=")" />
		</code>
	should result in when evaluated:
		(+ *VAL* *VAL* )
	This saves us having to add lots of <text val=" " /> elements. 
	

<!--type INITIAL_BLOCK-->
<tpcl_block
	type="INITIAL_BLOCK"
	name="Lambda Design"
	description="A lambda function taking a design as its only argument."
	display="(lambda (design) *EXPR*)"
	<code>
		<text val="(lambda (design)" />
		<block type="EXPR" />
		<text val ")" />
	</code>
</tpcl_block>

<!--type BOOL-->
<tpcl_block
	type="BOOL"
	name="&lt;"
	description="The less-than comparison."
	display="(&lt; *VAL* *VAL*)">
	<code>
		<text val="(&lt;" />
		<block type="VAL" />
		<block type="VAL" />
		<text val=")" />
	</code>
</tpcl_block>

<tpcl_block
	type="BOOL"
	name=">"
	description="The greater-than comparison."
	display="(> *VAL* *VAL*)">
	<code>
		<text val="(>" />
		<block type="VAL" />
		<block type="VAL" />
		<text val=")" />
	</code>
</tpcl_block>
	
<tpcl_block
	type="BOOL"
	name="="
	description="The equal-to comparison."
	display="(= *VAL* *VAL*)">
	<code>
		<text val="(=" />
		<block type="VAL" />
		<block type="VAL" />
		<text val=")" />
	</code>
</tpcl_block>


<!--type PROC-->
<tpcl_block
	type="PROC"
	name="let"
	description="The let block - allows creating temporary variables."
	display="(let ((*SYMBOL* *VAL*)) *EXPR*)
	<code>
		<text val="(let ((" />
		<block type="SYMBOL" />
		<block type="VAL" />
		<text val="))" />
		<block type="EXPR" />
		<text val=")" />
	</code>
</tpcl_block>


<!--type FUNC-->
<tpcl_block
	type="FUNC"
	name="if"
	description="The if flow-control structure"
	display="(if *BOOL* *EXPR* *EXPR*)"
	<code>
		<text val="(if" />
		<block type="BOOL" />
		<block type="EXPR" />
		<block type="EXPR" />
		<text val=")" />
</tpcl_block>

<tpcl_block
	type="FUNC"
	name="+"
	description="Adder."
	display="(+ *VAL* *VAL*)"
	<code>
		<text val="(+"
		<block type="VAL">
		<block type="VAL">
		<text val=")"
	<code>
</tpcl_block>


<!--type SYMBOL-->
<!--
we don't define any symbols by default...
-->


<!--type VAL-->
<tpcl_block
	type="VAL"
	name="#t"
	description="True constant."
	display="#t"
	<code>
		<text val="#t" />
	</code>
</tpcl_block>

<tpcl_block
	type="VAL"
	name="#f"
	description="False constant."
	display="#f"
	<code>
		<text val="#f" />
	</code>
</tpcl_block>