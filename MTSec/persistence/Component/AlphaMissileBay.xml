<component
   category=""
   description="Missle bays designed by Mr. Alpha Omega."
   name="AlphaMissileBay"
   version="1.0">
   <tpcl_requirements>(lambda (design)
   (if (= (designType.num-ammo design) 1)
      (if (&lt; (designType.AmmoSize design) 4)
         (cons #t "")
         (cons #f "Explosive is too large for alpha missiles"))
      (cons #f "Missiles can only handle one type of explosive")))   </tpcl_requirements>
   <!-- properties -->
   <property
      name="MissileCost">
      <tpcl_cost>(lambda (design)
   (* (floor (/ 3 (designType.AmmoSize design))) (designType.AmmoCost design)));      </tpcl_cost>
   </property>
   <property
      name="MissileFirepower">
      <tpcl_cost>(lambda (design)
   (* (floor (/ 3 (designType.AmmoSize design))) (designType.AmmoExplosiveness design)));      </tpcl_cost>
   </property>
   <property
      name="Armor">
      <tpcl_cost>(lambda (design) 0)      </tpcl_cost>
   </property>
   <property
      name="BuildTime">
      <tpcl_cost>(lambda (design) 1)      </tpcl_cost>
   </property>
   <property
      name="MissileSize">
      <tpcl_cost>(lambda (design) 3)      </tpcl_cost>
   </property>
   <property
      name="Colonise">
      <tpcl_cost>(lambda (design) 0)      </tpcl_cost>
   </property>
   <property
      name="Speed">
      <tpcl_cost>(lambda (design) 0)      </tpcl_cost>
   </property>
   <property
      name="num-baytypes">
      <tpcl_cost>(lambda (design) 1)      </tpcl_cost>
   </property>
   <property
      name="StartingHitPoints">
      <tpcl_cost>(lambda (design) 0)      </tpcl_cost>
   </property>
</component>
