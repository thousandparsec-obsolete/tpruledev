<property
   description="Whether a ship can colonise or not."
   display_text="Colonise"
   name="Colonise"
   rank="0"
   version="1.1">
   <tpcl_display>(lambda (design bits)
	(let ((n (apply + bits)))
		(cons n (if (= n 1) "Yes" "No")) ) )   </tpcl_display>
   <tpcl_requires>(lambda (design) (cons #t ""))   </tpcl_requires>
   <!-- categories -->
   <category
      name="Ships" />
</property>
