<property
   description="The amount of damage done on a draw"
   display_text="Weapon Strength at Draw"
   name="WeaponDraw"
   rank="0"
   version="1.1">
   <tpcl_display>(lambda (design bits)
	(let ((n (apply + bits)))
		(cons n (string-append (number-&gt;string n) " HP")) ) )   </tpcl_display>
   <tpcl_requires>(lambda (design) (cons #t ""))   </tpcl_requires>
   <!-- categories -->
   <category
      name="Ships" />
</property>
