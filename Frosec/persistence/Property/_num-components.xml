<property
   description="The number of components in a design"
   display_text="Number of Components"
   name="_num-components"
   rank="0"
   version="1.1">
   <tpcl_display>(lambda (design bits)
	(let ((n (apply + bits)))
		(cons n (string-append (number-&gt;string n) " components"))))   </tpcl_display>
   <tpcl_requires>(lambda (design) (cons #t ""))   </tpcl_requires>
   <!-- categories -->
   <category
      name="Ships" />
</property>
