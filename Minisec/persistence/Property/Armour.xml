<property
   category="Ships"
   description="The amount of amour on the ship"
   display_text="Armour"
   name="Armour"
   rank="0"
   version="1.0">
   <tpcl_display>(lambda (design bits)
	(let ((n (apply + bits)))
		(cons n (string-append (number-&gt;string n) " HP")) ) )   </tpcl_display>
   <tpcl_requires>(lambda (design) (cons #t ""))   </tpcl_requires>
</property>
