<property>
    <name>Speed</name>
    <category>Ships</category>
    <rank>0</rank>
    <display_text>Speed</display_text>
    <description>The number of units the ship can move each turn</description>
    <tpcl_display><![CDATA[(lambda (design bits)
	(let ((n (apply + bits)))
		(cons n (string-append (number->string (/ n 1000000)) \" mega-units\")) ) )]]></tpcl_display>
    <tpcl_requires><![CDATA[(lambda (design) (cons #t \"\"))]]></tpcl_requires>
</property>
