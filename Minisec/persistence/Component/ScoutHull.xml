<component
   description="The scout hull, fitted out with everything a scout needs"
   name="ScoutHull"
   version="1.1">
   <tpcl_requirements>(lambda (design) 
	(if (= (designType._num-components design) 1) 
		(cons #t "") 
		(cons #f "This is a complete component, nothing else can be included")))   </tpcl_requirements>
   <!-- categories -->
   <category
      name="Ships" />
   <!-- propertylist -->
   <property
      name="Armour">
      <tpcl_cost>(lambda (design) 2)      </tpcl_cost>
   </property>
   <property
      name="BuildTime">
      <tpcl_cost>(lambda (design) 1)      </tpcl_cost>
   </property>
   <property
      name="WeaponWin">
      <tpcl_cost>(lambda (design) 0)      </tpcl_cost>
   </property>
   <property
      name="WeaponDraw">
      <tpcl_cost>(lambda (design) 0)      </tpcl_cost>
   </property>
   <property
      name="Speed">
      <tpcl_cost>(lambda (design) 500000000)      </tpcl_cost>
   </property>
   <property
      name="_num-components">
      <tpcl_cost>(lambda (design) 1)      </tpcl_cost>
   </property>
</component>
